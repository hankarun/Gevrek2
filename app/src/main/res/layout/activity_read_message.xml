<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hankarun.gevrek.activities.ReadMessageActivity">

    <include
    android:id="@+id/toolbar12"
    layout="@layout/app_bar" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment22"
        android:name="com.hankarun.gevrek.fragments.ReadMessageFragment"
        tools:layout="@layout/fragment_read_message" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar12"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewRight"
        android:src="@mipmap/ic_right"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/fragment22"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewLeft"
        android:src="@mipmap/ic_left"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/fragment22"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>